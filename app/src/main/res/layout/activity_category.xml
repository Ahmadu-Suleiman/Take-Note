<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_color"
    tools:context=".activities.CategoryActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCategoryNotes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutChangeCategoryName"
        app:layout_constraintVertical_bias="1.0" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/imageView_add_category_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:fab_colorNormal="@color/colorAccent"
        app:fab_colorPressed="@color/colorPrimary"
        app:fab_icon="@drawable/ic_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/bold_font"
        android:maxLines="1"
        android:textColor="@color/main_text_color"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Category Name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutChangeCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/layoutDeleteCategory"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_categoryName">


        <ImageView
            android:id="@+id/imageViewRenameCategory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_rename"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/icon_tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/regular_font"
            android:text="@string/rename_category"
            android:textColor="@color/light_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewRenameCategory"
            app:layout_constraintStart_toEndOf="@+id/imageViewRenameCategory"
            app:layout_constraintTop_toTopOf="@+id/imageViewRenameCategory" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDeleteCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/layoutChangeCategoryName"
        app:layout_constraintTop_toBottomOf="@+id/textView_categoryName">

        <ImageView
            android:id="@+id/imageViewDeleteCategory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/icon_tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/regular_font"
            android:text="@string/delete_category"
            android:textColor="@color/light_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewDeleteCategory"
            app:layout_constraintStart_toEndOf="@+id/imageViewDeleteCategory"
            app:layout_constraintTop_toTopOf="@+id/imageViewDeleteCategory" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/empty_image_add_note_in_category"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:alpha="0.5"
        android:contentDescription="TODO"
        android:src="@drawable/ic_add_note"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:tint="@color/icon_tint" />

    <TextView
        android:id="@+id/text_empty_note_in_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:fontFamily="@font/medium_font"
        android:text="@string/no_notes_yet_n_tap_to_button_to_add_note"
        android:textColor="@color/light_text_color"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/empty_image_add_note_in_category"
        app:layout_constraintStart_toStartOf="@+id/empty_image_add_note_in_category"
        app:layout_constraintTop_toBottomOf="@+id/empty_image_add_note_in_category" />
</androidx.constraintlayout.widget.ConstraintLayout>
