<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="labelStyle">
        <item name="android:background">@drawable/background_label</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialogLayoutStyle">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_dialog</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="dialogActionTextStyle">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="TutorialTextStyle">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/medium_font</item>
    </style>

    <style name="drawerTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/medium_font</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
</resources>
